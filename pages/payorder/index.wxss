.coupon-wrap{ position: fixed; top: 0; height: 100%; width: 100%; overflow: auto; left: 0; background: #FFF; z-index: 90}
.coupon .date{ position: absolute; top: 10rpx; left: 10rpx; font-size: 20rpx; color: #999 }
.coupon-row{ display: flex; height: 100px; margin: 30rpx; position: relative}
.coupon{ flex: 1; display: flex; justify-content: center; align-items: center; flex-direction: column; background: #fafafa; color: #333}
.coupon-get{ width: 130px; background: #df3d40; display: flex; justify-content: center; align-items: center; color: #FFF; font-size: 30rpx}
.coupon-get.ok{ background: #b7b7b7}
.price{ font-size: 50rpx; color: #F00; margin: -20rpx 0;}
.price text{ font-size: 80rpx;}
.des{ font-size: 30rpx;}

.container{ padding-bottom: 238rpx;}
.slide-image{  
    width: 100%;  
}  